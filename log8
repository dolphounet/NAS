
enable
write erase

conf t
interface GigabitEthernet1/0
vrf forwarding Client_0
ip address 100.100.48.2 255.255.255.0
no shutdown
exit
interface Loopback1
ip address 10.0.50.1 255.255.255.255
no shutdown
exit
router bgp 5
bgp router-id 8.8.8.8
neighbor 100.100.48.1 remote-as 1
address-family ipv4
redistribute connected
neighbor 100.100.48.1 activate
exit-address-family
exit
end
