
enable
write erase

conf t
interface GigabitEthernet1/0
ip address 100.100.15.2 255.255.255.0
vrf forwarding Client_0
no shutdown
exit
interface Loopback1
ip address 10.0.20.1 255.255.255.255
no shutdown
exit
router bgp 2
bgp router-id 5.5.5.5
neighbor 100.100.15.1 remote-as 1
address-family ipv4
redistribute connected
neighbor 100.100.15.1 activate
exit-address-family
exit
end
